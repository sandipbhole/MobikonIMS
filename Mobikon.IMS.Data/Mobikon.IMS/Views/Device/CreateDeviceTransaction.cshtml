                                @Html.ValidationMessageFor(deviceTransaction => deviceTransaction.countryName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @if (Session["Role"].ToString() == "Operations" || Session["Role"].ToString() == "Administrators" || Session["Role"].ToString() == "Sales")
