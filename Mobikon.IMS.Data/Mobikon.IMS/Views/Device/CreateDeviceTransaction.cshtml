                                    @Html.DropDownListFor(deviceTransaction => deviceTransaction.clientName, ViewBag.clientName as IEnumerable<SelectListItem>, "Select brand name", new { @class = "form-control", @autofocus = "autofocus", @readonly = "readonly" })
