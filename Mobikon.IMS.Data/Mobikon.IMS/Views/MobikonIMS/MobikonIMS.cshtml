<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Device Inventory Dashboard</title>
    </head>
    <body>
        <script src="/Scripts/modernizr-2.8.3.js"></script>
        <script src="/Scripts/jquery-2.1.4.js"></script>
        <script src="/bundles/jquery-ui"></script>
        <script src="/Scripts/jquery.unobtrusive-ajax.js"></script>
        <script src="/Scripts/jquery.validate.js"></script>
        <script src="/Scripts/jquery.validate.unobtrusive.js"></script>
        <script src="~/Scripts/deviceHistoryReport.js"></script>
        @using (Html.BeginForm("MobikonIMS", "MobikonIMS", FormMethod.Get))
        {
            <div>&nbsp;</div>
            <center>
                <h5>
                    <strong>Device Inventory Dashboard</strong>
                </h5>
            </center>
            @*<div style="border-radius: 5px; vertical-align:central; width:1250px;background-color: #fff;border: solid 1px #808080;">
                <div class="filtering">
                    <div class="container">
                        <div class="row">
