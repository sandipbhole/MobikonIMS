        }
        <div style="border-radius: 5px;vertical-align:central; width:1250px;background-color: #fff;border: solid 1px #808080;">
            <div class="container">
                <div>&nbsp;</div>
                <div>
                    <table class="table table-striped" data-search="true" style="border:solid 1px #ddd;background-color:lightyellow">

                        <tr>
                            <th>
                                @*@Html.ActionLink("Status", "MobikonIMS", new { sortOrder = ViewBag.statusSort, statusFilter = ViewBag.statusFilter })*@
                                Status
                            </th>
                            <th> Count </th>
                            <th>Action</th>
                        </tr>
                        @foreach (var deviceTransaction in Model)
                        {
                            <tr>   
                                @if (deviceTransaction.status == "Deployed-Active")
                                {
                                    <td style="color:black">
                                        @Html.DisplayFor(device => deviceTransaction.status)
                                    </td>
                                }
                                @if (deviceTransaction.status == "Internal Use")
                                {
                                    <td style="color:lightgreen">
                                        @Html.DisplayFor(device => deviceTransaction.status)
                                    </td>
                                }
                                @if (deviceTransaction.status == "In Stock")
                                {
                                    <td style="color:orange">
                                        @Html.DisplayFor(device => deviceTransaction.status)
                                    </td>
                                }                           
                                @if (deviceTransaction.status == "Blocked")
                                {
                                    <td style="color:purple">
                                        @Html.DisplayFor(device => deviceTransaction.status)
                                    </td>
                                }
                                @if (deviceTransaction.status == "Damaged")
                                {
                                    <td style="color:Highlight">
                                        @Html.DisplayFor(device => deviceTransaction.status)
                                    </td>
                                }
                                @if (deviceTransaction.status == "Sold/Written Off")
                                {
                                    <td style="color:red">
                                        @Html.DisplayFor(device => deviceTransaction.status)
                                    </td>
                                }
                                @if (deviceTransaction.status == "Suspense/Lost")
                                {
                                    <td style="color:Green">
                                        @Html.DisplayFor(device => deviceTransaction.status)
                                    </td>
                                }
                                @if (deviceTransaction.status == "Collected from Client under Testing")
                                {
                                    <td style="color:black">
                                        @Html.DisplayFor(device => deviceTransaction.status)
                                    </td>
                                }
                                @if (deviceTransaction.status == "De-Activate")
                                {
                                    <td style="color:black">
                                        @Html.DisplayFor(device => deviceTransaction.status)
                                    </td>
                                }
                                @*deviceCount*@
                               @if (deviceTransaction.status == "Deployed-Active")
                               {
                                <td style="color:black">
                                    @Html.DisplayFor(device => deviceTransaction.deviceCount)
                                </td>
                               }
                                @if (deviceTransaction.status == "Internal Use")
                                {
                                    <td style="color:lightgreen">
                                        @Html.DisplayFor(device => deviceTransaction.deviceCount)
                                    </td>
                                }
                                @if (deviceTransaction.status == "In Stock")
                                {
                                    <td style="color:orange">
                                        @Html.DisplayFor(device => deviceTransaction.deviceCount)
                                    </td>
                                }
                                @if (deviceTransaction.status == "Blocked")
                                {
                                    <td style="color:purple">
                                        @Html.DisplayFor(device => deviceTransaction.deviceCount)
                                    </td>
                                }
                                @if (deviceTransaction.status == "Damaged")
                                {
                                    <td style="color:Highlight">
                                        @Html.DisplayFor(device => deviceTransaction.deviceCount)
                                    </td>
                                }
                                @if (deviceTransaction.status == "Sold/Written Off")
                                {
                                    <td style="color:red">
                                        @Html.DisplayFor(device => deviceTransaction.deviceCount)
                                    </td>
                                }
                                @if (deviceTransaction.status == "Suspense/Lost")
                                {
                                    <td style="color:Green">
                                        @Html.DisplayFor(device => deviceTransaction.deviceCount)
                                    </td>
                                }
                                @if (deviceTransaction.status == "Collected from Client under Testing")
                                {
                                    <td style="color:black">
                                        @Html.DisplayFor(device => deviceTransaction.deviceCount)
                                    </td>
                                }
                                @if (deviceTransaction.status == "De-Activate")
                                {
                                    <td style="color:black">
                                        @Html.DisplayFor(device => deviceTransaction.deviceCount)
                                    </td>
                                }
                                <td>
                                @Html.ActionLink("Show", "ShowDevices", "Device", new { statusSearch = deviceTransaction.status },null)
                                </td>
                            </tr>                         
                        }
                    </table>
                </div>
                @Html.PagedListPager(Model, page => Url.Action("MobikonIMS", new { page, sortOrder = ViewBag.currentSort, statusFilter = ViewBag.statusFilter, fromDateFilter = ViewBag.fromDateFilter, toDateFilter = ViewBag.toDateFilter, cityNameFilter = ViewBag.cityNameFilter, deviceTypeFilter = ViewBag.deviceTypeFilter, paging = ViewBag.paging }))
            </div>
        </div>
    </body>
</html>